{
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-console": "off",
    "eqeqeq": "error",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-spaced-func": 2,
    "no-trailing-spaces": 1,
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "brace-style": [1, "1tbs"],
    "new-cap": 2,
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "space-in-parens": [1, "never"],
    "spaced-comment": 1,

  }
}